<div class="container">
  <div class="row">
    <div class="col-4">
      <%= profile_picture(@account) %>
    </div>
    <div class="col-8 text-left">
      <div class="row">
        <div class="col-6">
          <%=link_to "Edit Profile", edit_account_registration_path, class: "btn btn-muted btn-custom float-right" if can_edit_profile?(@account.id) %>
          <h1><%=@account.full_name %></h1>
        </div>
      </div>
      <div class="row profile-stats">
        <div class="col-4">
          <%=@account.posts.count%> posts
        </div>
        <div class="col-4">
          <%=@account.total_followers %> followers
        </div>
        <div class="col-4">
          <%=@account.total_following %> following
        </div>
      </div>

      <p><%= @account.full_name %><p>
      <%= simple_format @account.description %>

      <p><%= link_to @account.website if @account.website.present? %><p>
    </div>
  </div>
  <div class="row profile-posts">
    <% @posts.each do |post| %>
      <div class="col-4">
        <div class = "insta-post">
            <%= link_to image_tag(post.image.url, class: "img img-fluid"), post_path(post) %>
        </div>
      </div>
    <% end %>
  </div>
</div>